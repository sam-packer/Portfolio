---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto w-full">
    <li><a class="py-3 text-base rounded-md" id="home" href="/">Home</a></li>
    <li><a class="py-3 text-base rounded-md" id="projects" href="/projects/">Projects</a></li>
    <li><a class="py-3 text-base rounded-md" id="experience" href="/experience/">Experience</a></li>
    <li><a class="py-3 text-base rounded-md" id="blog" href="/blog/">Blog</a></li>
    <li><a class="py-3 text-base rounded-md" id="contact" href="/contact/">Contact</a></li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>
