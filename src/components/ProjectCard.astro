---
const {title, img, desc, url, badge, tags, target = "_blank", referrer} = Astro.props;
import {Image} from "astro:assets";
---

<div class="card card-border clickable">
    <a href={url} target={target} aria-label={title}
       data-event={referrer === "home" ? "Project Card From Front Page" : "Project Card From Projects Page"}>
        <div class="hero-content flex-col md:flex-row">
            {
                img && (
                            <Image
                                    src={img}
                                    width={750}
                                    height={422}
                                    format="webp"
                                    loading="eager"
                                    alt={title}
                                    class="max-w-full md:max-w-[13rem] rounded-lg"
                            />
                )
            }
            <div class="grow w-full">
                <h1 class="text-xl font-bold">
                    {title}
                    {badge &&
                            <div class="badge badge-secondary mx-2">{badge}</div>}
                </h1>
                <p class="py-1 text-1xl">{desc}</p>
                <div class="card-actions justify-start">
                    {tags && <p class="text-md text-base-content/75">Skills and tools used:</p>}
                    {
                        tags &&
                        tags.map((tag) => (
                                <p class="badge badge-outline" aria-label={`Tag ${tag}`}>
                                    {tag}
                                </p>
                        ))
                    }
                </div>
            </div>
        </div>
    </a>
</div>
