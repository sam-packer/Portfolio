---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogCard from "../components/BlogCard.astro";
import {getCollection} from "astro:content";
import createSlug from "../lib/createSlug"
import ProjectCard from "../components/ProjectCard.astro";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
dayjs.extend(utc);

const currentDate = dayjs();
const posts = (await getCollection("blog"))
    .filter(post => dayjs(post.data.pubDate).utc().isBefore(currentDate) || dayjs(post.data.pubDate).utc().isSame(currentDate))
    .sort((a, b) => dayjs(b.data.pubDate).utc().valueOf() - dayjs(a.data.pubDate).utc().valueOf());

const projects = (await getCollection("projects")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latest_posts = posts.slice(0, 3);
const latest_projects = projects.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
    <div class="pb-12 mt-5">
        <div class="text-xl py-1">Hello,</div>
        <div class="text-5xl font-bold">I'm Sam Packer</div>
        <div class="text-3xl py-3">Software Engineer, System Administrator, and Data Analyst</div>
        <div class="py-2 prose min-w-full">
            <p class="text-lg">
                Welcome to my website and thank you for visiting! I am graduating in May 2025 with a degree in Computer
                Information Systems, and honestly, I’m thrilled about the chance to use technology to solve real world
                business problems. Whether it’s building software, automating tedious processes, or turning data into
                actionable insights, I love finding ways to make things work more efficiently.
            </p>
            <p class="text-lg">
                During my time at university and through my work experience, I’ve focused on helping teams collaborate
                more effectively and creating tools that solve real world problems. Whether it’s building automation
                workflows that save hours of manual work or designing complex applications for business, I enjoy finding
                ways to make technology work for people, not the other way around.
            </p>
            <p class="text-lg">
                I’d love to chat about how I can bring my strong problem solving mindset to your organization. Feel free
                to look at some of my projects below or connect with me on LinkedIn!
            </p>
        </div>
        <div class="mt-8 flex items-center space-x-3">
            <a data-event="Front Page GitHub Button"
               href="https://github.com/sam-packer"
               target="_blank"
               class="btn btn-lg btn-primary"
               aria-label="GitHub" title="GitHub">
                <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        style="fill: currentColor;transform: ;msFilter:;"
                >
                    <path
                            fill-rule="evenodd"
                            clip-rule="evenodd"
